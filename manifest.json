{
    "manifest_version": 2,
    "name": "Clear and Block History Plugin",
    "version": "1.1",
    "description": "Clear search history and prevent saving history of specified sites.",
    "permissions": ["history", "storage", "webRequest", "webRequestBlocking", "*://*/*"],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  